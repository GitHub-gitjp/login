<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
  
<mapper namespace="cn.itcast.dao.UserDao">  
      
    <!--注意sql语句没有分号结尾  -->  
      
    <insert id="addUser" parameterType="User">  
        insert into personnel values( #{uname},#{uage},#{uaccount},#{upassword},#{to_work},#{off_work},#{is_out},#{is_leave},#{is_anager}) 
    </insert>  
      
    <!--注意这里的参数类型是parameterType而不是parameterMap，因为返回的是单个类型  -->  
    <select id="findLog"  parameterType="map"  resultType="User">  
        select t.name,t.password from t_user t where name=#{uname} and password=#{upassword}  
    </select>  
      
</mapper>  